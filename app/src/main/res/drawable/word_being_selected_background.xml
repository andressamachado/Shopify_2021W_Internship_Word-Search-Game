<?xml version="1.0" encoding="utf-8"?>

<!--drawable used to change background layout when word is being selected-->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/wordBeingSelectedBg"/>
            <corners
                android:radius="15dp"/>
        </shape>
    </item>
</selector>